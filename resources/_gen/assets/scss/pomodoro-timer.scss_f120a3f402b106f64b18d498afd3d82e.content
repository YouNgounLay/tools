#home-btn {
  position: fixed;
  top: 20px;
  left: 20px;
  background-color: white;
  color: #FF7F3E;
  box-shadow: #ebebeb 0px 6px 0px;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  transition: 0.2s; }
  #home-btn:hover {
    scale: 1.2; }

.page-body-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0%;
  height: 100%; }
  .page-body-container .split-container {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    flex-direction: column; }
    .page-body-container .split-container:first-child {
      background-color: #FF7F3E; }
    .page-body-container .split-container > * {
      margin: 10px; }
    .page-body-container .split-container h1 {
      font-size: 50px; }
    .page-body-container .split-container .title-text,
    .page-body-container .split-container .timer-text {
      font-size: 50px; }
    .page-body-container .split-container button {
      cursor: pointer;
      padding: 0.5em 1em;
      border: medium;
      border-radius: 8px;
      font-size: 30px;
      text-transform: uppercase;
      background-color: white;
      color: #FF7F3E;
      box-shadow: #ebebeb 0px 6px 0px;
      transition: 0.2s; }
      .page-body-container .split-container button:hover {
        scale: 1.2; }
    .page-body-container .split-container input[type="text"] {
      color: black;
      border-radius: 8px;
      padding: 10px;
      border: 2px solid black;
      width: 60%; }
    .page-body-container .split-container #add-task-btn {
      font-size: 20px;
      background-color: #FF7F3E;
      color: white;
      box-shadow: #CC6530 0px 6px 0px; }
    .page-body-container .split-container #tasks-container {
      margin-top: 20px;
      width: 100%;
      max-width: 400px; }
    .page-body-container .split-container .task-item {
      display: flex;
      align-items: center;
      margin-bottom: 10px; }
    .page-body-container .split-container .task-checkbox {
      margin-right: 10px;
      width: 20px;
      height: 20px; }
    .page-body-container .split-container .task-label {
      font-family: "Lora", "Space Grotesk", "Helvetica", "Arial";
      font-size: 20px;
      color: black; }

.custom-btn {
  position: fixed;
  background-color: white;
  color: #FF7F3E;
  box-shadow: #ebebeb 0px 6px 0px;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
