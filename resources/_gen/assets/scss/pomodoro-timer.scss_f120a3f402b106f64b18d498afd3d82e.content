  transition: 0.2s; }
  .custom-btn:hover {
    scale: 1.2; }

#setting-btn {
  bottom: 20px;
  left: 20px; }

#video-btn {
  bottom: 80px;
  left: 20px; }

.video-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
  /* Ensure it's above other elements */
  display: none;
  /* Initially hidden */
  background-color: white;
  padding: 20px;
  border: 2px solid #007BFF;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  max-width: 80%;
  /* Adjust as needed */
  max-height: 80%;
  /* Adjust as needed */
  overflow: hidden; }

.video-container iframe {
  width: 100%;
  height: 100%; }

.video-inputs {
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center; }

.video-inputs input {
  flex: 1;
  margin-right: 10px; }

.modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0, 0, 0, 0.4);
  justify-content: center;
  align-items: center; }

/* Style for the modal content */
.modal-content {
  background-color: #fefefe;
  background-color: #FF7F3E;
  margin: 15% auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
  max-width: 500px;
  border-radius: 10px; }

.modal-content input {
  font-family: "Lora", "Space Grotesk", "Helvetica", "Arial";
  width: 100%;
  padding: 10px;
  margin: 5px 0 10px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  color: #FF7F3E; }

.modal-content button {
  background-color: white;
  color: #FF7F3E;
  box-shadow: #ebebeb 0px 6px 0px;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  transition: 0.2s;
  margin: 10px 10px; }
  .modal-content button:hover {
    scale: 1.2; }

